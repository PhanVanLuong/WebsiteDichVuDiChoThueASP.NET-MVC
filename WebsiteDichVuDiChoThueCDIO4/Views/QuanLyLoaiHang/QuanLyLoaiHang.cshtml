@using WebsiteDichVuDiChoThueCDIO4.Models
@model IEnumerable<LoaiHang>

@{
    ViewBag.Title = "QuanLyLoaiHang";
    Layout = "~/Views/Layout/AdminPartial.cshtml";
}

<head>
    <style>
        #customers {
            font-family: Arial, Helvetica, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

            #customers td, #customers th {
                border: 1px solid #ddd;
                padding: 8px;
            }

            #customers tr:nth-child(even) {
                background-color: #f2f2f2;
            }

            #customers tr:hover {
                background-color: #ddd;
            }

            #customers th {
                padding-top: 12px;
                padding-bottom: 12px;
                text-align: left;
                background-color: #4CAF50;
                color: white;
            }
    </style>
</head>

<center><h2>Quản lý loai hàng</h2></center>

<label>@ViewBag.ThongBao</label>
<table border="1" id="customers">
    <tr>
        <th><label>ID loại</label></th>
        <th><label>Tên loai hàng</label></th>
        
        <th><label>Chức năng xóa</label></th>
        <th><label>Chức năng sửa</label></th>

    </tr>
    @foreach (var item in Model)
    {

        <tr>
            <td><label>@item.LOAIHANG_ID</label></td>
            <td><label>@item.TENLOAIHANG</label></td>
            


            <td><button type="submit" style="width:100px">Xóa</button></td>


            @*<td><a href="@Url.Action("Sua", "QuanLySanPham", new { @SP_ID = item.SP_ID })">Sửa</a></td>*@
            <td><button type="submit" style="width:100px">Sửa</button></td>



        </tr>
    }
</table>
<br />
<a href="@Url.Action("ThemLH","QuanLyLoaiHang")" style="font-size:x-large">Thêm loai hàng</a>



