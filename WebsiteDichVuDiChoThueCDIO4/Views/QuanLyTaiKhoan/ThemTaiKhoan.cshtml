
@{
    ViewBag.Title = "ThemTaiKhoan";
    Layout = "~/Views/Layout/AdminPartial.cshtml";
}

<h2>Thêm tài khoản</h2>
<br />
@using (Html.BeginForm("ThemTaiKhoan1", "QuanLyTaiKhoan"))
{
<div>
    @{
        if (ViewBag.ThongBao == "thanhcong")
        {
            <spam>Bạn đã thêm thành công</spam>
        }
    }

    <table align="center" class="table">

        <tr>
            <td>Tên khách hàng</td>
            <td>@Html.TextBox("HOTEN")</td>
        </tr>
        <tr>
            <td>Email</td>
            <td>@Html.TextBox("EMAIL")</td>
        </tr>
        <tr>
            <td>Địa chỉ</td>
            <td>@Html.TextArea("DIACHI")</td>
        </tr>
        <tr>
            <td>Số điện thoại</td>
            <td>@Html.TextBox("SDT")</td>
        </tr>
        <tr>
            <td>Tên đăng nhập</td>
            <td>@Html.TextBox("TENDN")</td>
        </tr>
        <tr>
            <td>Mật khẩu</td>
            <td>@Html.TextBox("MATKHAU")</td>
        </tr>


    </table>
    <button type="submit">Thêm tài khoản</button>


</div>

}


