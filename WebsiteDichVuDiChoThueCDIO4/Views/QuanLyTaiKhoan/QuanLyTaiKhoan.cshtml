@using WebsiteDichVuDiChoThueCDIO4.Models
@model IEnumerable<TAIKHOAN>

@{
    ViewBag.Title = "QuanLyTaiKhoan";
    Layout = "~/Views/Layout/AdminPartial.cshtml";
}

    <head>
        <style>
            #customers {
                font-family: Arial, Helvetica, sans-serif;
                border-collapse: collapse;
                width: 100%;
            }

                #customers td, #customers th {
                    border: 1px solid #ddd;
                    padding: 8px;
                }

                #customers tr:nth-child(even) {
                    background-color: #f2f2f2;
                }

                #customers tr:hover {
                    background-color: #ddd;
                }

                #customers th {
                    padding-top: 12px;
                    padding-bottom: 12px;
                    text-align: left;
                    background-color: #4CAF50;
                    color: white;
                }
        </style>
    </head>

<h2>Quản lý tài khoản</h2>
<br />
<label>@ViewBag.ThongBao</label>
<table border="1" id="customers">
    <tr>
        <th><label>Họ tên</label></th>
        <th><label>Tên đăng nhập</label></th>
        <th><label>Mật khẩu</label></th>
        <th><label>Số điện thoại</label></th>
        <th><label>Địa chỉ</label></th>
        <th><label>Email</label></th>
        <th><label>Loại tài khoản</label></th>
        <th><label>Chức năng xóa</label></th>
        <th><label>Chức năng sửa</label></th>
    </tr>
    @foreach (var item in Model)
    {
        
<tr>
    <td><label>@item.HOTEN</label></td>
    <td><label>@item.TENDN</label></td>
    <td><label>@item.MATKHAU</label></td>
    <td><label>@item.SDT</label></td>
    <td><label>@item.DIACHI</label></td>
    <td><label>@item.EMAIL</label></td>
    <td><label>@item.LOAITK_ID</label></td>
    @using (Html.BeginForm("XoaTaiKhoan", "QuanLyTaiKhoan", new { @TK_ID = item.TK_ID }))
    {
        <td><button type="submit" style="width:100px">Xóa</button></td>
    }
    <td><button type="submit" style="width:100px">Sửa</button></td>

</tr>
    }
</table>
<br />
<a href="@Url.Action("ThemTaiKhoan","QuanLyTaiKhoan")" style="font-size:x-large">Thêm tài khoản</a>
